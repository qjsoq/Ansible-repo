---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: {{certificate_secret}}
  namespace: {{cert_namespace}}
spec:
  secretName: {{certificate_secret}}
  issuerRef:
    name: {{cluster_issuer_name}}
    kind: ClusterIssuer
  dnsNames:
{% for d in cert_domains %}
    - "{{ d }}"
{% endfor %}
  acme:
    config:
      - http01:
          ingressClass: {{ingress_class_name}}
        domains:
{% for d in cert_domains %}
          - "{{ d }}"
{% endfor %}